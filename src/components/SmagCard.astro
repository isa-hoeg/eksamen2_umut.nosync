---
const { opskrift } = Astro.props;
---

<article class="card_container">
  <a href={`/opskrifter/${opskrift.opskrift_slug}`}>
    <div class="card">
      <img src={`/imgs/${opskrift.opskrift_img}`} alt="Billede af opskrift" />
      <h3>{opskrift.opskrift_titel}</h3>
    </div>
  </a>
</article>

<style>
  /* MOBIL FORMAT */
  a {
    text-decoration: none;
  }
  img {
    width: 100%;
    aspect-ratio: 200/190;
    object-fit: cover;
    border-radius: 10px 10px 0 0;
  }

  .card_container {
    background-color: var(--smag);
    text-align: center;
    border-radius: 10px;
    /* margin-bottom: 25px; */
  }
  .card_container:hover {
    transform: scale(1.03); /* Zoomer lidt ud */
    transition: transform 0.3s ease-in-out;
  }

  h3 {
    font-size: 16px;
    padding: 10px;
  }

  /* DESKTOP FORMAT */
  @media (min-width: 850px) {
    img {
      aspect-ratio: 254/264;
    }

    h3 {
      font-size: 20px;
      padding: 10px;
    }

    .card_container {
      margin-bottom: 25px;
    }
  }
</style>
