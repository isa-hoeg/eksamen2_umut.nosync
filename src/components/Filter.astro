  } */

  @media (min-width: 850px) {
    .filter-container {
      display: flex;
      gap: 10px;
      margin-bottom: 40px;
      justify-content: center;
      align-items: flex-start; /* <- vigtigt for at undgå at bokse hopper */
      flex-wrap: nowrap; /* forhindrer linjeskift (kan ændres til wrap hvis nødvendigt) */
    }

    details {
      text-align: start;
      background-color: var(--brun);
      border-radius: 7px;
      font-size: 15px;
      padding: 5px 9px;
      margin-right: 20px;
      margin-bottom: 20px;
      cursor: pointer;
      width: auto;
      overflow-y: auto; /* scroll hvis der er meget indhold */
      min-width: 150px; /* så de ikke bliver for smalle */
      width: 300px;
    }

    summary,
    p {
      color: var(--skrift);
      font-size: 15px;
    }
