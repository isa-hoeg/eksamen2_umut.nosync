      background-repeat: no-repeat, no-repeat;
      height: auto;
      width: 100%;
      background-size: 150px, 400px; /* eller fx 50%, contain, eller cover */
    }

    .oplev {
      background-image:
        url(/svg_forside/broccoli.svg), url(/svg_forside/lille_tomat.svg),
        url(/svg_forside/mellem_tomat.svg),
        url(/svg_forside/groenne_foraarsloeg.svg), url(/svg_forside/fly.svg);
      background-position:
        right top,
        calc(85% - 525px) top,
        calc(70% - 520px) bottom,
        left calc(70% - 250px),
        right bottom;
      background-repeat: no-repeat;
      height: auto;
      width: 100%;
      background-size: 250px, 150px, 300px, 200px, 400px;
    }

    .skab {
      background-image:
        url(/svg_forside/roed_stor_tomat.svg), url(/svg_forside/roed_chili.svg),
        url(/svg_forside/stor_tomat.svg);
      background-position:
        left center,
        center calc(100% - 625px),
        right calc(100% - 400px);
      background-repeat: no-repeat;
      height: auto;
      width: 100%;
      background-size: 100px, 200px, 150px;
    }

    .some {
      background-image: url(/svg_forside/hvidloeg.svg);
      background-position: 0 10%;
      background-repeat: no-repeat;
      height: auto;
      width: 100%;
      background-size: 200px; /* eller fx 50%, contain, eller cover */
    }

    /* DESKTOP CSS */
    .ramme {
      max-width: 1100px;
    }
    .velkommen {
      margin-top: 80px;
    }

    h1 {
      font-size: 90px;
    }

    p {
      font-size: 20px;
    }

    .hero_grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 30px;
      margin-top: 50px;
    }
    .grid_1-1 {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 30px;
    }

    .rejs_img {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      order: -1;
      p {
        width: 40ch;
      }
    }

    .oplev1 {
      grid-column: 2/ 4;
      grid-row: 1 / span 2;
    }

    .oplev2 {
      grid-column: 3/ 5;
      grid-row: 2 / span 2;
    }

    .rejs_text {
      width: 50ch;
    }

    .flex {
      display: flex;
      justify-content: center;
    }

    .smagcards {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 20px;
    }

    .skab_knapper {
      display: flex;
      flex-direction: row;
      gap: 20px;
    }
  }
</style>
